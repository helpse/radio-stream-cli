#!/usr/bin/env bash
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
if [[ -z $RADIO_STREAM_CONTAINER ]]; then $DIR/../util/container_run.sh $(basename "$0") $*; exit 0; fi

function blsf() {
    (
        echo "Artist|Title|Album|Last played|Count|Rating|Date added|Deleted|Aggression";
        echo "------|-----|-----|-----------|-----|------|----------|-------|---------|";
        beet ls -f '%left{$artist,20}|%left{$title,40}|%left{$album,20}|$lastplayed|$playcount|$rating|$added|$deleted|$aggression' "$@"
    ) | column -s \| -t -c 60
}

echo -e "\e[33mRunning: beet ls $*\e[39m"

blsf $*
